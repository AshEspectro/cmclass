datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                   Int       @id @default(autoincrement())
  username             String    @unique
  email                String    @unique
  password             String
  role                 Role      @default(USER)
  isActive             Boolean   @default(true)
  resetPasswordToken   String?
  resetPasswordExpires DateTime?
  refreshToken         String?

  // Relations to AuditLog
  actorLogs               AuditLog[]      @relation("actor")
  targetLogs              AuditLog[]      @relation("target")
  processedSignupRequests SignupRequest[] @relation("processedBy")
  createdAt               DateTime        @default(now())
  updatedAt               DateTime        @updatedAt
}

enum Role {
  SUPER_ADMIN
  ADMIN
  MODERATOR
  SUPPORT
  USER
}

model AuditLog {
  id           Int      @id @default(autoincrement())
  actorId      Int?
  actor        User?    @relation("actor", fields: [actorId], references: [id])
  targetUserId Int?
  targetUser   User?    @relation("target", fields: [targetUserId], references: [id])
  action       String
  meta         Json?
  createdAt    DateTime @default(now())
}

enum SignupStatus {
  PENDING
  APPROVED
  DENIED
}

model SignupRequest {
  id            Int          @id @default(autoincrement())
  name          String
  email         String       @unique
  roleRequested String
  message       String?
  password      String?      // Temporarily store a user-provided password until the request is processed
  status        SignupStatus @default(PENDING)
  createdAt     DateTime     @default(now())
  processedAt   DateTime?
  processedById Int?
  processedBy   User?        @relation("processedBy", fields: [processedById], references: [id])
}

// Singleton brand settings for the storefront/admin
model Brand {
  id             Int      @id @default(autoincrement())
  name           String?
  slogan         String?
  description    String?
  servicesHeaderTitle String?
  servicesHeaderDescription String?
  contactEmail   String?
  primaryColor   String?  @default("#007B8A")
  secondaryColor String?
  accentColor    String?
  logoUrl        String?
  faviconUrl     String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// Product categories for products/catalog
model Category {
  id          Int       @id @default(autoincrement())
  name        String
  slug        String    @unique
  description String?
  imageUrl    String?
  active      Boolean   @default(true)
  parentId    Int?
  parent      Category? @relation("CategoryChildren", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryChildren")
  // Optional ordering field for manual sorting
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  products    Product[]
}

model Product {
  id               Int      @id @default(autoincrement())
  name             String
  slug             String   @unique
  description      String?
  productImage     String?  // main product image
  priceCents       Int      @default(0)
  stock            Int      @default(0)
  status           String   @default("ACTIVE")
  label            String?  // e.g., "Best Seller", "Nouveau", "Collection Été"
  images           String[] @default([])
  inStock          Boolean  @default(true)
  longDescription  String?
  mannequinImage   String   // appears on hover
  colors           Json     // Array of { name: string; hex: string; images: string[] }
  sizes            String[] @default([]) // Array of available sizes (e.g., ["S", "M", "L", "XL"])
  categoryId       Int
  category         Category @relation(fields: [categoryId], references: [id])
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model HeroSection {
  id                    Int     @id @default(autoincrement())
  mainText              String
  subtext               String
  backgroundImageUrl    String?
  backgroundVideoUrl    String?
  mediaType             String  @default("image")
  ctaButtonText         String
  ctaButtonUrl          String
  isActive              Boolean @default(true)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model Campaign {
  id                    Int     @id @default(autoincrement())
  title                 String
  genreText             String?
  imageUrl              String?
  buttonText            String?
  status                String  @default("Brouillon")
  selectedCategories    Int[]   @default([])
  selectedProductIds    Int[]   @default([])
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model Service {
  id        Int      @id @default(autoincrement())
  title     String
  description String?
  imageUrl  String?
  link      String?
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

