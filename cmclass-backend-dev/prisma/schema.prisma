datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                   Int       @id @default(autoincrement())
  username             String    @unique
  email                String    @unique
  password             String
  role                 Role      @default(USER)
  isActive             Boolean   @default(true)
  emailVerified        Boolean   @default(false)
  emailVerifyToken     String?
  emailVerifyExpires   DateTime?
  resetPasswordToken   String?
  resetPasswordExpires DateTime?
  refreshToken         String?

  // Personal Information
  title                String?
  firstName            String?
  lastName             String?
  phoneCountryCode     String?
  phoneNumber          String?
  dateOfBirth          DateTime?

  // Marketing Preferences
  marketingOptIn       Boolean   @default(false)
  marketingEmails      Boolean   @default(false)
  marketingSms         Boolean   @default(false)
  marketingTargetedAds Boolean   @default(false)

  // Relations to AuditLog
  actorLogs               AuditLog[]      @relation("actor")
  targetLogs              AuditLog[]      @relation("target")
  processedSignupRequests SignupRequest[] @relation("processedBy")
  
  // Account bound data
  cartItems               CartItem[]
  wishlistItems           WishlistItem[]
  orders                  Order[]

  createdAt               DateTime        @default(now())
  updatedAt               DateTime        @updatedAt
}

enum Role {
  SUPER_ADMIN
  ADMIN
  MODERATOR
  SUPPORT
  USER
}

model AuditLog {
  id           Int      @id @default(autoincrement())
  actorId      Int?
  actor        User?    @relation("actor", fields: [actorId], references: [id])
  targetUserId Int?
  targetUser   User?    @relation("target", fields: [targetUserId], references: [id])
  action       String
  meta         Json?
  createdAt    DateTime @default(now())
}

enum SignupStatus {
  PENDING
  APPROVED
  DENIED
}

model SignupRequest {
  id            Int          @id @default(autoincrement())
  name          String
  email         String       @unique
  roleRequested String
  message       String?
  password      String?      // Temporarily store a user-provided password until the request is processed
  status        SignupStatus @default(PENDING)
  createdAt     DateTime     @default(now())
  processedAt   DateTime?
  processedById Int?
  processedBy   User?        @relation("processedBy", fields: [processedById], references: [id])
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  subject   String
  message   String
  createdAt DateTime @default(now())
}

model InboundEmail {
  id          Int      @id @default(autoincrement())
  messageId   String?  @unique
  sourceId    String?
  protocol    String   @default("imap")
  mailbox     String   @default("INBOX")
  fromName    String?
  fromEmail   String?
  toEmails    String[] @default([])
  ccEmails    String[] @default([])
  subject     String?
  text        String?
  html        String?
  receivedAt  DateTime?
  attachments Json?
  archived    Boolean  @default(false)
  createdAt   DateTime @default(now())

  @@unique([protocol, sourceId, mailbox])
}

// Account bound data models
model CartItem {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId Int
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity  Int      @default(1)
  size      String   @default("")
  color     String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, productId, size, color]) // Reliable unique constraint
}

model WishlistItem {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId Int
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, productId])
}

// Singleton brand settings for the storefront/admin
model Brand {
  id             Int      @id @default(autoincrement())
  name           String?
  slogan         String?
  description    String?
  servicesHeaderTitle String?
  servicesHeaderDescription String?
  contactEmail   String?
  instagramUrl   String?
  facebookUrl    String?
  twitterUrl     String?
  pinterestUrl   String?
  footerText     String?
  primaryColor   String?  @default("#007B8A")
  secondaryColor String?
  accentColor    String?
  logoUrl        String?
  logoLightUrl   String?
  logoDarkUrl    String?
  faviconUrl     String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// Product categories for products/catalog
model Category {
  id          Int       @id @default(autoincrement())
  name        String
  slug        String    @unique
  description String?
  imageUrl    String?
  active      Boolean   @default(true)
  parentId    Int?
  parent      Category? @relation("CategoryChildren", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryChildren")
  // Optional ordering field for manual sorting
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  products    Product[]
}

model Product {
  id               Int      @id @default(autoincrement())
  name             String
  slug             String   @unique
  description      String?
  productImage     String?  // main product image
  priceCents       Int      @default(0)
  stock            Int      @default(0)
  status           String   @default("ACTIVE")
  label            String?  // e.g., "Best Seller", "Nouveau", "Collection Été"
  images           String[] @default([])
  inStock          Boolean  @default(true)
  longDescription  String?
  mannequinImage   String?   // appears on hover
  careInstructions String?
  environmentalInfo String?
  colors           Json     // Array of { name: string; hex: string; images: string[] }
  sizes            String[] @default([]) // Array of available sizes (e.g., ["S", "M", "L", "XL"])
  categoryId       Int
  category         Category @relation(fields: [categoryId], references: [id])
  
  // Relations to account data
  cartItems        CartItem[]
  wishlistItems    WishlistItem[]
  orderItems       OrderItem[]

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model HeroSection {
  id                    Int     @id @default(autoincrement())
  mainText              String
  subtext               String
  backgroundImageUrl    String?
  backgroundVideoUrl    String?
  mediaType             String  @default("image")
  ctaButtonText         String
  ctaButtonUrl          String
  isActive              Boolean @default(true)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model Campaign {
  id                    Int     @id @default(autoincrement())
  title                 String
  genreText             String?
  imageUrl              String?
  buttonText            String?
  status                String  @default("Brouillon")
  selectedCategories    Int[]   @default([])
  selectedProductIds    Int[]   @default([])
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model Service {
  id        Int      @id @default(autoincrement())
  title     String
  description String?
  imageUrl  String?
  link      String?
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AboutPage {
  id                Int      @id @default(autoincrement())
  heroTitle         String
  heroImageUrl      String?
  visionTitle       String
  visionParagraphs  String[] @default([])
  craftTitle        String
  craftParagraphs   String[] @default([])
  craftImageUrl     String?
  valuesTitle       String
  values            Json
  ctaTitle          String
  ctaDescription    String?
  ctaButtonText     String
  ctaButtonUrl      String
  isActive          Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PAID
  REFUNDED
}

model Notification {
  id        Int      @id @default(autoincrement())
  title     String
  message   String
  type      String   @default("INFO")
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Order {
  id           Int           @id @default(autoincrement())
  userId       Int
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  status       OrderStatus   @default(PENDING)
  paymentStatus PaymentStatus @default(PENDING)
  totalCents   Int           @default(0)
  currency     String        @default("EUR")
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  items        OrderItem[]
}

model OrderItem {
  id         Int      @id @default(autoincrement())
  orderId    Int
  order      Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId  Int
  product    Product  @relation(fields: [productId], references: [id])
  quantity   Int      @default(1)
  priceCents Int      @default(0)
  size       String   @default("")
  color      String   @default("")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model FooterSection {
  id        Int          @id @default(autoincrement())
  title     String
  order     Int          @default(0)
  isActive  Boolean      @default(true)
  links     FooterLink[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model FooterLink {
  id         Int           @id @default(autoincrement())
  sectionId  Int
  section    FooterSection @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  label      String
  url        String
  order      Int           @default(0)
  isActive   Boolean       @default(true)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
}

model LegalContent {
  id        Int      @id @default(autoincrement())
  type      String   @unique // e.g., 'mentions-legales', 'privacy-policy', 'cgv'
  title     String
  content   String   @db.Text
  updatedAt DateTime @updatedAt
}
